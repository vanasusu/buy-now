<section>
  <div class="container">
    <div class="row mt-5 mb-3">
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
    </div>
    <table class="table" id="admin-viewProducts">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th>Image</th>
          <th>.</th>
          <th>.</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <td>
              <a
                href="/admin/product/{{this.id}}"
                class="text-dark"
                style="cursor: pointer;text-decoration: none;"
              >
                {{this.name}}
              </a>
            </td>
            <td>
              <a
                href="/admin/product/{{this.id}}"
                class="text-dark"
                style="cursor: pointer;text-decoration: none;"
              >
                {{this.category}}
              </a>
            </td>
            <td>
              <a
                href="/admin/product/{{this.id}}"
                class="text-dark"
                style="cursor: pointer;text-decoration: none;"
              >
                â‚¹{{this.price}}
              </a>
            </td>
            <td>
              <a
                href="/admin/product/{{this.id}}"
                style="cursor: pointer;text-decoration: none;"
              >
                <img
                  style="width: 50px;"
                  src={{this.image}}
                  alt=""
                />
              </a>
            </td>
            <td>
              <a
                class="btn btn-primary"
                href="/admin/edit-product/{{this.id}}"
              >Edit</a>
            </td>
            <td>
              <a
                class="btn btn-danger"
                href="/admin/delete-product/{{this.id}}"
                onclick="return confirm('Do you want to delete {{this.name}}')"
              >Delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>