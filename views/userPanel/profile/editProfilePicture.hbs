<section>
  <div class="container mt-5">
    <h3>Upload Image</h3>
    <form
    enctype="multipart/form-data"
      action="/edit-profile-photo"
      method="post"
      
      class="col-md-6"
    >
      <input
        type="file"
        accept="image/*"
        class="form-control mt-3"
        name="image"  required />
      <button type="submit" class="btn btn-primary mt-3">Edit Picture</button>
    </form>
  </div>
</section>