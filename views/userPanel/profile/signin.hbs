<section class="pt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-6 m-auto">
        <h2 class="text-center">Login </h2>
        <form action="/signin" method="post">
          {{#if loginErr}}
            <p class="error text-danger">{{loginErr}}</p>
          {{/if}}
          <label for="email" class="form-label mt-4">Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            required
          />
          <label for="password" class="form-label mt-4">Password</label>
          <input
            type="password"
            class="form-control"
            name="password"
            id="password"
            required
          />
          <div class="row mt-4">
            <div class="col-6">
              <p>Create a new Account? <a href="/signup">Signup</a></p>
            </div>
            <div class="col-6" style="display: flex;justify-content: end;">
              <input
                type="Submit"
                class="btn btn-primary"
                style="width: 100px;"
                value="Login"
              />
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>